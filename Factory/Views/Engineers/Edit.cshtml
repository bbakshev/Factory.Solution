@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Edit</h2>

<p>Edit this engineer's information: @Html.DisplayFor(model => model.Name)</p>

@using (Html.BeginForm())
{
  <p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600; color:red;" })</p>
  <p>@Html.LabelFor(model => model.Name)</p>
  <p>@Html.TextBoxFor(model => model.Name)</p>

  <p>@Html.Label("Hire Date")</p>
  <p>@Html.EditorFor(model => model.HireDate)</p>
  <br><br>

  <input type="submit" value="Add Engineer" class="btn btn-primary" />
}

<br>
<div id="nav-links">
  <p>@Html.ActionLink("Back to List of Engineers", "Index")</p>
</div>